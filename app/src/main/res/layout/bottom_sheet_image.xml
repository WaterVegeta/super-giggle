<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pickBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cameraBtn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:icon="@drawable/outline_image_search_24"
        app:iconGravity="textTop"
        app:iconSize="80dp"
        app:iconPadding="5dp"
        app:cornerRadius="8dp"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:text="choose from galery"/>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Material3.Button.TonalButton"
        app:cornerRadius="8dp"
        android:id="@+id/cameraBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pickBtn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:icon="@drawable/outline_camera_24"
        app:iconGravity="textTop"
        app:iconSize="80dp"
        app:iconPadding="5dp"
        android:text="take a picture"/>

</androidx.constraintlayout.widget.ConstraintLayout>