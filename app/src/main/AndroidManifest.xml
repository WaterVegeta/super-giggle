<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <application
        android:name=".MyDynamic"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TabsGPTtutor"
        tools:targetApi="31" >
        <activity
            android:name=".animation_pref.AnimationActivity"
            android:exported="false" />
        <activity
            android:name=".schedule_change.ChangeScheduleAct"
            android:exported="false"
            android:label="@string/title_activity_change_schedule" />
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".widget.ScheduleWidgetProvider"
            android:exported="false"
            android:label="Some BGC" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/shedule_widget_provider" />
        </receiver>

        <service
            android:name=".widget.ScheduleWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver
            android:name=".widget.DynamicWidProvider"
            android:exported="false"
            android:label="Some Dynamic BGC" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/wid_dynamic_provider" />
        </receiver>
    </application>

</manifest>